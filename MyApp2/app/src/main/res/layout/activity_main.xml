<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtViewHome"
            android:layout_width="163dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/txtViewScreen1" />

        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/button2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="169dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Hello World!" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/button" />

        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonScreen2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonScreen3" />

        <Button
            android:id="@+id/buttonStandard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonStandard" />

        <Button
            android:id="@+id/buttonSingleTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonSingleTop" />

        <Button
            android:id="@+id/buttonSingleTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonSingleTask" />

        <Button
            android:id="@+id/buttonSingleInstance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonSingleInstance" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonStartservice" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonStopservice" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonStartFservice" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonStopFservice" />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BoundService" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read Contact with Content Provider" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intent" />

    </LinearLayout>
</ScrollView>
