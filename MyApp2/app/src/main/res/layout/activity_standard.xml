<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Standard">

    <Button
        android:id="@+id/buttonStandard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Standard" />

    <Button
        android:id="@+id/buttonSingleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/buttonSingleTop"
        android:layout_toRightOf="@+id/buttonStandard"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintVertical_bias="0.302" />


    <Button
        android:id="@+id/buttonSingleTask"
        android:layout_width="234dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="@string/buttonSingleTask"
        android:layout_below="@+id/buttonSingleTop"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintVertical_bias="0.364" />

    <Button
        android:id="@+id/buttonSingleInstance"
        android:layout_width="235dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="@string/buttonSingleInstance"
        android:layout_below="@+id/buttonSingleTask"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="235dp"
        android:layout_height="86dp"
        android:gravity="center"
        android:text="TextView"
        android:layout_below="@+id/buttonSingleInstance"/>

</RelativeLayout>